<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="m-4">商品一覧<span>(全<%= @items.count %>件)</span></h2>
    </div>
  </div>
</div>
<div class="container mb-4">
  <div class="row mb-2">
    <% @items.each do |item| %>
      <div class="col-4 mb-2" style="height: 200px;">
        <div>
        <%= link_to customers_item_path(item.id) do %>
        <%= attachment_image_tag(item, :image, size: "150x150", format: 'jpg', fallback: "no-image.jpg")%><br>
        <%= item.name %><br>
        <% end %>
        <div>
        ¥<%= product.price.to_s(:delimited) %>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div>
       <%= paginate @items %>
      </div>
    </div>
  </div>
</div>