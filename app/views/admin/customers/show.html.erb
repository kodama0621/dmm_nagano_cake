<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class= "mb-5"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員詳細" %></h3>
      <table class= "table">
        <tr>
          <th>会員id</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= "#{@customer.last_name}#{@customer.first_name}" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= "#{@customer.last_name_kana}#{@customer.first_name_kana}" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == true %>
            <p>退会</p>
            <% elsif @customer.is_deleted == false %>
            <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md text-center">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
      <%= link_to '注文履歴一覧を見る', admin_orders_path(id: @customer.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>