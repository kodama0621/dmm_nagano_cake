<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h3 class= "mb-5"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員情報編集" %></h3>
      <%= form_for @customer, url: admin_customer_path, method: :patch do |f| %>
        <table class= "table table-borderless">
          <tr>
            <th>会員id</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td>
              <div class="form-inline">
                <%= f.text_field :last_name, class: "form-control" %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <div class="form-inline">
                <%= f.text_field :last_name_kana, class: "form-control" %>
                <%= f.text_field :first_name_kana, class: "form-control" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number, class: "form-control" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_active, "退会", {value: :true, style: "display: inline-block;"} %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit :"変更を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>