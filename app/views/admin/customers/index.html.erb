<div class="container">
  <div class="row">
    <div class="col-md">
      <h3>会員一覧</h3>
      <table class= "table">
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer), class: "text-primary" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == true %>
                <p>退会</p>
              <% elsif customer.is_deleted == false %>
                <p class="text-success">有効</p>
              <% end %>
            </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>