<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-white">
      <div class="container">

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <% if customer_signed_in? %>
          <div class="ml-5">ようこそ、<%= current_customer.last_name %>さん</div>
        <% end %>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if customer_signed_in? %>
          <li><%= link_to "マイページ", public_customer_path(current_customer.id), class: 'btn btn-secondary' %></li>
          <li><%= link_to "商品一覧", public_items_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "カート", public_cart_items_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "ログアウト", destroy_public_session_path, method: :delete, class: 'btn btn-secondary' %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to "商品一覧", admin_items_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "注文履歴一覧", admin_orders_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-secondary' %></li>

        <% else %>
          <li><%= link_to "About", home_about_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "商品一覧", public_items_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-secondary' %></li>
          <li><%= link_to "ログイン", new_customer_session_path, class: 'btn btn-secondary' %></li>
        <% end %>
        </ul>
        </div>
      </div>
    </nav>

    <%if admin_signed_in? %>
      <div class="text-center">
      <%= form_with url: admin_search_search_path, method: :get, local: true do |f| %>
        <%= text_field_tag 'search[content]' %>
        <%= select_tag 'search[model]', options_for_select({ "Customer" => "costomre", "Item" => "item" }) %>
        <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
        <%= submit_tag '検索', class: "btn btn btn-secondary" %>
      <% end %>
      </div>
    <% end %>

    </header>
    <%= yield %>
  </body>
</html>
