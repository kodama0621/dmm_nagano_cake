<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h3 class= "mb-3">マイページ</h3>
      <table class= "mb-3">
        <tr>
          <th>登録情報</th>
          <td><%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success btn-sm ml-3" %></td>
        </tr>
      </table>
      <table class= "table table-bordered">
        <tr>
          <th class= "table-active" style="width: 30%">氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th class= "table-active">カナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
         <tr>
          <th class= "table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
         <tr>
          <th class= "table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class= "table-active">電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class= "table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <table class= "mb-3">
        <tr>
          <th>配送先</th>
          <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary btn-sm w-100 ml-3" %></td>
        </tr>
        <tr>
          <th>注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-sm w-100 ml-3" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>